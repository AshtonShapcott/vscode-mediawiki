{
    "name": "mediawiki-highlighting",
    "displayName": "MediaWiki Highlighting",
    "description": "Provides syntax highlighting for MediaWiki markup.",
    "version": "0.0.1",
    "publisher": "ashapcott",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "mediawiki",
                "aliases": [
                    "MediaWiki",
                    "mediawiki"
                ],
                "extensions": [
                    ".mediawiki",
                    ".wiki"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mediawiki",
                "scopeName": "source.mediawiki",
                "path": "./syntaxes/mediawiki.tmLanguage.json"
            }
        ]
    },
    "devDependencies": {
        "gulp": "^3.9.1",
        "gulp-yaml": "^2.0.2",
        "yaml": "^1.0.0"
    }
}
